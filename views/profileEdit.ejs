<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head.ejs') %>
  <title>Edit Profile</title>
</head>
<body>
  <%- include('partials/nav.ejs') %>

  <div class="container mt-4" style="max-width: 640px;">
    <h2 class="mb-3">Edit Profile</h2>

    <form method="POST" action="/profile/edit" class="card shadow-sm p-3">
      <div class="mb-3">
        <label class="form-label">Username</label>
        <input class="form-control" value="<%= profileUser.username %>" disabled>
      </div>

      <div class="mb-3">
        <label class="form-label">Bio</label>
        <textarea name="bio" rows="4" class="form-control"
                  placeholder="Tell others about your nutrition goals, preferences, etc."><%= profileUser.bio || '' %></textarea>
      </div>

      <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="isProfilePublic" name="isProfilePublic"
               <%= profileUser.isProfilePublic ? 'checked' : '' %>>
        <label class="form-check-label" for="isProfilePublic">
          Make my profile public
        </label>
      </div>

      <div class="d-flex justify-content-between">
        <a href="/profile" class="btn btn-outline-secondary">Cancel</a>
        <button type="submit" class="btn btn-success">Save changes</button>
      </div>
    </form>
  </div>

  <%- include('partials/foot.ejs') %>
</body>
</html>

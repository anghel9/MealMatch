<!DOCTYPE html>
<html lang="en">
<head>
  <!--
    /**
     * @file Admin Login Page
     * @description Provides a secure login interface for MealMatch administrators.
     * Loads shared head partial, Bootstrap CSS, Bootstrap icons, and local stylesheet.
     *
     * @dependencies
     *  - partials/head.ejs
     *  - /css/styles.css
     *  - Bootstrap 5.3.8
     *  - Bootstrap Icons
     *
     * @routes
     *  POST /login  - Authenticates an existing admin user
     */
  -->
  
  <%- include('partials/head.ejs') %>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">

  <title>Admin Dashboard</title>
</head>

<body>
  <!--
    /**
     * @section Navigation
     * @description Loads the shared navigation bar. 
     * Displays different links depending on authentication and role.
     */
  -->
  <%- include('partials/nav.ejs') %>

  <!--
    /**
     * @section Login Form Container
     * @description Page layout wrapper with centered admin login form.
     */
  -->
  <div class="container mt-5" style="max-width: 1000px;">
    <h2 class="text-center mb-3">Admin Dashboard</h2>

    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm p-4">

        <!--
          /**
           * @form Admin Login Form
           * @route POST /login
           * @description Authenticates the admin user using email and password.
           * Fields:
           *  - email: string (required)
           *  - password: string (required)
           */
        -->
        <form method="post" action="/login">

          <!-- Email Field -->
          <!--
            /**
             * @input email
             * @type text
             * @description Login email for admin user.
             */
          -->
          <div class="mb-3 text-start">
            <label for="email" class="form-label">Email</label>
            <div class="position-relative">
              <input
                type="email"
                class="form-control pe-5"
                id="email"
                name="email"
                placeholder="Enter your email"
                required
              >
              <span class="bi bi-envelope position-absolute top-50 end-0 translate-middle-y me-3 text-muted"></span>
            </div>
          </div>

          <!-- Password Field -->
          <!--
            /**
             * @input password
             * @description Password field with toggle visibility icon.
             */
          -->
          <div class="mb-3 text-start">
            <label for="pwd" class="form-label">Password</label>
            <div class="position-relative">
              <input
                type="password"
                class="form-control pe-5"
                id="pwd"
                name="password"
                placeholder="Enter your password"
                required
              >
              <span
                class="bi bi-eye position-absolute top-50 end-0 translate-middle-y me-3 text-muted"
                id="eyeIcon"
                style="cursor: pointer;">
              </span>
            </div>
          </div>

          <!-- Submit Button -->
          <!--
            /**
             * @button Login
             * @description Submits the authentication request for admin login.
             */
          -->
          <div class="d-grid mt-3">
            <button class="btn btn-success" type="submit">Login</button>
          </div>
        </form>

        </div>
      </div>
    </div>
  </div>

  <!--
    /**
     * @footer Includes global JS and footer partial.
     */
  -->
  <%- include('partials/foot.ejs') %>

  <!--
    /**
     * @script Toggle Password Visibility
     * @description Allows users to toggle the password field between text/password.
     */
  -->
  <script>
    const eyeIcon = document.querySelector("#eyeIcon");
    const pwd = document.querySelector("#pwd");

    if (eyeIcon && pwd) {
      eyeIcon.addEventListener("click", () => {
        const hidden = pwd.type === "password";
        pwd.type = hidden ? "text" : "password";

        eyeIcon.classList.toggle("bi-eye", !hidden);
        eyeIcon.classList.toggle("bi-eye-slash", hidden);
      });
    }
  </script>

</body>
</html>

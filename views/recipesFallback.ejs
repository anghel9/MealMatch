<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head.ejs') %>
  <title>Search Recipes</title>
</head>
<body>
  <%- include('partials/nav.ejs') %>

  <main class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="m-0">Search Recipes</h2>
    </div>

    
    <form class="row g-2 mb-4" method="GET" action="/recipes">
      <div class="col-md-8">
        <input
          type="text"
          name="keyword"
          class="form-control"
          placeholder="Search by ingredients (e.g. chicken, rice)"
          value="<%= typeof keyword !== 'undefined' ? keyword : '' %>"
        >
      </div>
      <div class="col-md-4 d-grid d-md-block">
        <button type="submit" class="btn btn-success">
          Search
        </button>
      </div>
    </form>

    <% if (!meals || !meals.length) { %>
      <div class="alert alert-warning">
        No recipes found.
      </div>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% meals.forEach(meal => { %>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <% if (meal.strMealThumb) { %>
                <img src="<%= meal.strMealThumb %>" class="card-img-top" alt="<%= meal.strMeal %>">
              <% } %>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= meal.strMeal %></h5>

                
                <p class="fw-semibold mb-1" style="font-size:.9rem;">Top ingredients</p>
                <ul class="mb-2" style="font-size:.85rem;">
                  <%
                    let i = 1, count = 0;
                    while (i <= 20 && count < 6) {
                      const ing  = meal['strIngredient' + i];
                      const meas = meal['strMeasure' + i];
                      if (ing && ing.trim() !== '') {
                  %>
                        <li><%= (meas || '').trim() %> <%= ing.trim() %></li>
                  <%
                        count++;
                      }
                      i++;
                    }
                  %>
                </ul>

                <div class="mt-auto d-flex flex-wrap gap-2">
                  <% if (meal.strYoutube) { %>
                    <a href="<%= meal.strYoutube %>" target="_blank" rel="noopener"
                       class="btn btn-outline-success btn-sm">
                      YouTube
                    </a>
                  <% } %>

                  <% if (meal.strSource) { %>
                    <a href="<%= meal.strSource %>" target="_blank" rel="noopener"
                       class="btn btn-outline-secondary btn-sm">
                      Source
                    </a>
                  <% } %>

                  <% if (isAuthenticated) { %>
                    
                    <form method="POST" action="/favorites/add" class="d-inline">
                      <input type="hidden" name="recipeId" value="<%= meal.idMeal %>">
                      <input type="hidden" name="title"    value="<%= meal.strMeal %>">
                      <input type="hidden" name="imageUrl" value="<%= meal.strMealThumb %>">
                      <input type="hidden" name="calories" value="">
                      <input type="hidden" name="protein"  value="">
                      <button type="submit" class="btn btn-sm btn-outline-primary">
                        Add to Favorites
                      </button>
                    </form>

                    
                    <form method="POST" action="/tracker/add" class="d-inline">
                      <input type="hidden" name="recipeId" value="<%= meal.idMeal %>">
                      <input type="hidden" name="recipeData"
                             value='<%= JSON.stringify(meal) %>'>
                      <button type="submit" class="btn btn-sm btn-outline-secondary">
                        Add to Tracker
                      </button>
                    </form>
                  <% } else { %>
                    <span class="text-muted small">
                      <a href="/login">Log in</a> to save or track this recipe.
                    </span>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

  </main>

  <%- include('partials/foot.ejs') %>
</body>
</html>
